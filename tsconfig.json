{
    "extends": "./base.tsconfig.json",
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "build",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "noEmit": false,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "skipLibCheck": true,
    },
    "include": ["src/"],
    "exclude": ["src/**/tests", "node_modules/"],
}
