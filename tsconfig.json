{
    "extends": "./base.tsconfig.json",
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "dist",
      "module": "esnext",
      "target": "es6",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "noEmit": false,
      "lib": ["es2017", "dom"],
      "moduleResolution": "node",
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/"],
    "exclude": ["src/**/tests", "node_modules/"],
}
