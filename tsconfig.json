{
    "extends": "sprotty/configs/base.tsconfig.json",
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "noEmit": false,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node"
    },
    "include": ["src/lib"],
    "exclude": ["src/lib/**/tests"],
}
